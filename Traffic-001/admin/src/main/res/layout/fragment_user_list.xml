<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/mon_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aftarobot.admin.departments.DepartmentListFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mon_margin"
        android:layout_marginLeft="@dimen/mon_margin"
        android:layout_marginRight="@dimen/mon_margin"
        android:layout_marginTop="@dimen/mon_margin"
        android:text="@string/hello_blank_fragment"
        app:cardElevation="@dimen/mon_divider">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/mon_margin">

            <ImageView
                android:id="@+id/iconAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add" />

            <TextView
                android:id="@+id/label"
                style="@style/Title3TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department Users" />

            <TextView
                android:id="@+id/users"
                style="@style/Title2TextStyleBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mon_wider"
                android:layout_toLeftOf="@id/iconAdd"
                android:text="0" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card">

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>
