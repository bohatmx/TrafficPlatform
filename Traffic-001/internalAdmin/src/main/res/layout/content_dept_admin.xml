<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aftarobot.admin.fines.DepartmentAdminActivity"
    tools:showIn="@layout/activity_dept_admin">

     <android.support.v7.widget.CardView
         app:cardElevation="@dimen/mon_divider"
         android:layout_margin="@dimen/mon_margin"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <RelativeLayout
             android:padding="@dimen/mon_margin"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <TextView
                 android:id="@+id/txtTitle"
                 android:text="Department Details"
                 style="@style/Title2TextStyleBlack"
                 android:layout_centerHorizontal="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <android.support.design.widget.TextInputLayout
                 android:id="@+id/lay1"
                 android:layout_below="@id/txtTitle"
                 android:layout_marginTop="@dimen/mon_wide"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <android.support.design.widget.TextInputEditText
                     android:id="@+id/editName"
                     android:hint="Traffic Department Name"
                     android:inputType="textCapWords"
                     android:textColor="@color/black"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
             </android.support.design.widget.TextInputLayout>
             <android.support.design.widget.TextInputLayout
                 android:id="@+id/lay2"
                 android:layout_below="@id/lay1"
                 android:layout_marginTop="@dimen/mon_padding"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <android.support.design.widget.TextInputEditText
                     android:id="@+id/editEmail"
                     android:hint="Email Address"
                     android:inputType="textEmailAddress"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
             </android.support.design.widget.TextInputLayout>
             <android.support.design.widget.TextInputLayout
                 android:id="@+id/lay3"
                 android:layout_below="@id/lay2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <android.support.design.widget.TextInputEditText
                     android:id="@+id/editCity"
                     android:hint="City Name"
                     android:inputType="textCapWords"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
             </android.support.design.widget.TextInputLayout>
             <Button
                 android:id="@+id/btnSend"
                 android:text="Submit Data"
                 android:layout_below="@id/lay3"
                 android:layout_marginTop="@dimen/mon_wider"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
         </RelativeLayout>
     </android.support.v7.widget.CardView>


</RelativeLayout>
