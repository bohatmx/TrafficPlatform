<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aftarobot.traffic.officer">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- API KEY, DEBUG: AIzaSyDcRalx9IJAw006svcwHsyHRoTm8dD7njE  -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/MarshalTheme">
        <meta-data
            android:name="com.google.android.awareness.API_KEY"
            android:value="@string/officer_api_key" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/officer_api_key" />
        <meta-data
            android:name="com.google.android.nearby.messages.API_KEY"
            android:value="@string/officer_api_key" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/OwnerTheme"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.OfficerInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".services.OfficerMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


    </application>

</manifest>