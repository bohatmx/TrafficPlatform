<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aftarobot.traffic.officer.capture.CameraActivity">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/back10"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        app:cardElevation="@dimen/mon_padding"
        android:layout_margin="@dimen/mon_margin"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/mon_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iconCamera"
                android:src="@drawable/ic_camera"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iconVideo"
                android:src="@drawable/ic_hand"
                android:layout_toLeftOf="@id/iconCamera"
                android:layout_marginRight="@dimen/mon_wider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iconCancel"
                android:src="@drawable/ic_cancel"
                android:layout_alignParentLeft="true"
                android:tint="@color/red_600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
